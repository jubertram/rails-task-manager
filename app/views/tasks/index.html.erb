<h1>My tasks</h1>

<ul class="list-unstyled">
<% @tasks.each do |task| %>
    <li>
    <% if task.completed? %>
  <%= "<i class='fa-regular fa-square-check'></i>".html_safe %>
<% else %>
  <%= "<i class='fa-regular fa-square'></i>".html_safe %>
<% end %>
    <%= link_to task.title, task_path(task), class:"text-decoration-none" %>
    <%= link_to "<i class='fa-solid fa-trash-can text-dark'></i>".html_safe, task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"text-decoration-none"  %>
    </li>
<% end %>
</ul>

<%= link_to '<i class="fa-solid fa-plus"></i> add a new task'.html_safe, new_task_path, class:"text-decoration-none" %>
