<%= form_for @task do |f|%>
  <%= f.label :title %>
  <%= f.text_field :title, class:"form-control" %>
  <%= f.label :details %>
  <%= f.text_area :details, class:"form-control" %>
  <% if !@task.new_record? %>
    <%= f.check_box :completed %>
    <%= f.label :completed %>
  <% end %><br>
  <%= f.submit class:"btn btn-primary my-2" %>
<% end %>
